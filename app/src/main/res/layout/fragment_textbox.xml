<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textBox"
                android:layout_width="350sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="소설 내용을 입력하세요." />

            <ImageButton
                android:id="@+id/saveBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|left"
                android:background="@drawable/baseline_check_24"
                android:scaleType="fitCenter"
                android:text="저장"
                android:textSize="6sp" />

            <ImageButton
                android:id="@+id/editBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|right"
                android:background="@drawable/edit"
                android:scaleType="fitCenter"
                android:text="편집"
                android:textSize="6sp" />

            <ImageButton
                android:id="@+id/unpinBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="top|right"
                android:background="@drawable/baseline_push_pin_24"
                android:scaleType="fitCenter"
                android:text="고정"
                android:textSize="6sp" />

            <ImageButton
                android:id="@+id/pinBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="top|right"
                android:background="@drawable/baseline_import_export_24"
                android:scaleType="fitCenter"
                android:text="고정"
                android:textSize="6sp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="150dp"
                android:layout_height="30sp"
                android:thumb="@drawable/custom_seekbar_thumb"
                android:splitTrack="false"
                android:progressDrawable="@drawable/custom_seekbar"
                android:layout_gravity="top|right"
                android:background="@color/white"/>
            <!-- splitTrack은 thumb 여백 없애는거. 아니면 네모로 뜸 -->

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="150dp"
                android:layout_height="30sp"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="center|right">

                <ImageButton
                    android:id="@+id/colorBtn1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:src="@drawable/colorbtn1"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/colorBtn2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/colorbtn2"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/colorBtn3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/colorbtn3"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/colorBtn4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/colorbtn4"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/colorBtn5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/baseline_format_color_text_24"
                    android:text="Button" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>